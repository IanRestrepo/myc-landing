---
import { date } from "astro:schema";
const year = new Date().getFullYear();
---

<!-- component --><!-- Footer -->
<section class="bg-black">
  <div
    class="max-w-screen-xl px-4 py-12 mx-auto space-y-8 overflow-hidden sm:px-6 lg:px-8"
  >
    

    <p class="mt-8 text-base leading-6 text-center text-gray-400">
      © {year} M&C Games Studio, Inc. All rights reserved. 
      <button id="button">💚</button>
    </p>
  </div>
</section>

<script>
  let counter = 0;
  const emojis = ["❤️", "💚", "💙", "💜", "🧡", "💛", "🖤", "🤍", "🤎"]; // Lista de emojis
  const button = document.getElementById("button");

  if (button) {
    button.addEventListener("click", function () {
      // Cambiar el emoji en cada clic
      button.textContent = emojis[counter % emojis.length];
      
      counter++;
      if (counter === 9) {
        window.location.href = "/madeby"; 
        counter = 0;
      }
    });
  }
</script>
